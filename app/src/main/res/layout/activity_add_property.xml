<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProperty">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddProperty">

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"/>
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/editTextName"
            android:layout_marginTop="16dp"
            android:hint="Description"/>
        <!--    <ImageView-->
        <!--        android:id="@+id/imageViewPhoto"-->
        <!--        android:layout_width="200dp"-->
        <!--        android:layout_height="200dp"-->
        <!--        android:layout_below="@id/editTextEmail"-->
        <!--        android:layout_marginTop="16dp"-->
        <!--        android:src="@drawable/ic_launcher_foreground"/>-->
        <Button
            android:id="@+id/choosePhotoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextEmail"
            android:layout_marginTop="8dp"
            android:text="Choose Photo"/>
        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/choosePhotoButton"
            android:layout_marginTop="16dp"
            android:hint="Location"/>
        <EditText
            android:id="@+id/editTextPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextLocation"
            android:layout_marginTop="16dp"
            android:hint="Price"/>

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPrice"
            android:layout_marginTop="16dp"
            android:hint="Phone Number"/>
        <EditText
            android:id="@+id/editTextBedroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPhoneNumber"
            android:layout_marginTop="16dp"
            android:hint="No.of Bed Rooms"/>
        <EditText
            android:id="@+id/editTextBathroom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextBedroom"
            android:layout_marginTop="16dp"
            android:hint="No.of Bath Rooms"/>
        <EditText
            android:id="@+id/editAvailability"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextBathroom"
            android:layout_marginTop="16dp"
            android:hint="Available Date"/>
        <EditText
            android:id="@+id/editMapurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editAvailability"
            android:layout_marginTop="16dp"
            android:hint="Maps URL"/>
        <EditText
            android:id="@+id/edityoutubeurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editMapurl"
            android:layout_marginTop="16dp"
            android:hint="Youtube URL"/>

        <Button
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edityoutubeurl"
            android:layout_marginTop="16dp"
            android:text="Upload to Firebase"/>

        <Button
            android:id="@+id/switchTabButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadButton"
            android:layout_marginTop="16dp"
            android:text="Switch to Layout2"/>


    </RelativeLayout>
</ScrollView>