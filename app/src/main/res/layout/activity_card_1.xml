<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="300dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="268dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="1dp"
        android:background="@drawable/background"
        android:padding="16dp"
        android:layout_marginEnd="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rvPoster"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                android:paddingHorizontal="10dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@android:drawable/divider_horizontal_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"

                    android:gravity="center"
                    android:text="TextView"
                    android:textSize="18sp"
                    android:textStyle="bold" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
                <TextView
                    android:id="@+id/rvBedRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bed_room" />
                <TextView
                    android:id="@+id/rvBathRoom"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@string/bath_room" />
</LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rvOverview"
                        android:layout_width="270dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_corner"
                        android:backgroundTint="@color/silver"
                        android:gravity="center"
                        android:text="@string/availability"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/rvprice"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="TextView2"
                        android:textColor="@color/darkorange" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>